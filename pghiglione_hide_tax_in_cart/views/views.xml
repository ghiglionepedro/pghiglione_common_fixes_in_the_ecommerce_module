<odoo>
  <data>
    <record id="website_sale_total_amount_total" model="ir.ui.view">
      <field name="name">website_sale_total_amount_total</field>
      <field name="model">total</field>
      <field name="inherit_id" ref="website_sale.total"/>
      <field name="arch" type="xml">
          <xpath expr="//tr[@id='order_total_untaxed']" position="attributes">
            <attribute name="attrs">{'invisible': 'True'}</attribute>
          </xpath>
          <xpath expr="//tr[@id='order_total_taxes']" position="attributes">
            <attribute name="attrs">{'invisible': 'True'}</attribute>
          </xpath>
      </field>
  </record>
  </data>
</odoo>